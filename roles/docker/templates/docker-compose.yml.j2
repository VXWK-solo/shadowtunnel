version: '3.8'

services:
  xray:
    build:
      context: .
      dockerfile: Dockerfile.xray
    container_name: advanced-vpn-xray
    restart: unless-stopped
    ports:
      - "443:443"
      - "8388:8388"
    volumes:
      - vpn-configs:/etc/xray
      - vpn-certs:/etc/ssl/certs
      - vpn-logs:/var/log/xray
    environment:
      - TZ=UTC
      - XRAY_LOG_LEVEL=warning
    networks:
      - vpn-network
    healthcheck:
      test: ["CMD", "xray", "version"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  v2ray:
    build:
      context: .
      dockerfile: Dockerfile.v2ray
    container_name: advanced-vpn-v2ray
    restart: unless-stopped
    ports:
      - "10086:10086"
    volumes:
      - vpn-configs:/etc/v2ray
      - vpn-certs:/etc/ssl/certs
      - vpn-logs:/var/log/v2ray
    environment:
      - TZ=UTC
      - V2RAY_LOG_LEVEL=warning
    networks:
      - vpn-network
    healthcheck:
      test: ["CMD", "v2ray", "version"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    profiles:
      - v2ray

  shadowsocks:
    build:
      context: .
      dockerfile: Dockerfile.shadowsocks
    container_name: advanced-vpn-shadowsocks
    restart: unless-stopped
    ports:
      - "8388:8388"
    volumes:
      - vpn-configs:/etc/shadowsocks
      - vpn-logs:/var/log/shadowsocks
    environment:
      - TZ=UTC
      - SS_SERVER_ADDR=0.0.0.0
      - SS_SERVER_PORT=8388
      - SS_PASSWORD=${SHADOWSOCKS_PASSWORD}
      - SS_METHOD=${SHADOWSOCKS_METHOD}
    networks:
      - vpn-network
    healthcheck:
      test: ["CMD", "ss-server", "--help"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    profiles:
      - shadowsocks

  nginx:
    image: nginx:alpine
    container_name: advanced-vpn-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - vpn-configs:/etc/nginx/conf.d
      - vpn-certs:/etc/ssl/certs
      - vpn-logs:/var/log/nginx
    environment:
      - TZ=UTC
    networks:
      - vpn-network
    healthcheck:
      test: ["CMD", "nginx", "-t"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  prometheus:
    image: prom/prometheus:latest
    container_name: advanced-vpn-prometheus
    restart: unless-stopped
    ports:
      - "9090:9090"
    volumes:
      - vpn-configs:/etc/prometheus
      - vpn-logs:/var/log/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--storage.tsdb.retention.time=200h'
      - '--web.enable-lifecycle'
    networks:
      - vpn-network
    profiles:
      - monitoring

  grafana:
    image: grafana/grafana:latest
    container_name: advanced-vpn-grafana
    restart: unless-stopped
    ports:
      - "3000:3000"
    volumes:
      - vpn-configs:/etc/grafana/provisioning
      - vpn-logs:/var/log/grafana
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_PASSWORD}
      - GF_USERS_ALLOW_SIGN_UP=false
    networks:
      - vpn-network
    profiles:
      - monitoring

  webpanel:
    build:
      context: .
      dockerfile: Dockerfile.webpanel
    container_name: advanced-vpn-webpanel
    restart: unless-stopped
    ports:
      - "2053:2053"
    volumes:
      - vpn-configs:/app/config
      - vpn-logs:/app/logs
    environment:
      - NODE_ENV=production
      - PORT=2053
      - JWT_SECRET=${JWT_SECRET}
    networks:
      - vpn-network
    profiles:
      - webpanel

volumes:
  vpn-configs:
    driver: local
  vpn-certs:
    driver: local
  vpn-logs:
    driver: local

networks:
  vpn-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16
